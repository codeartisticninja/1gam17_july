story
  #init
    sleep
  #enter
    wait {game.frameRate*4}
    idle
    p What a weird dream..
  #sleep
    .hungry(if="{$.food LTE 0}")
      p I'm too hungry to sleep..
    .not-sleepy(if="{$.sleep GT 0}")
      p I'm not really sleepy..
    sleep tight
    wait {game.frameRate*1}
    pre {$.food -= 66;"+"}
    pre {$.sleep = 100;"+"}
    scene dream
  #computer
    .hungry(if="{$.food LTE 0}")
      p I'm too hungry..
    .sleepy(if="{$.sleep LTE 0}")
      p I'm too sleepy..
    do computer stuff
    wait {game.frameRate*8}
    pre {$.food -= 33;"+"}
    pre {$.sleep -= 33;"+"}
    idle
